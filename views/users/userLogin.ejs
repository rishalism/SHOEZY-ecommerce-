<%- include('../layouts/header.ejs') %>
    <div id="preloder">
        <div class="loader"></div>
    </div>


    <div class="container-fluid box1 d-flex justify-content-center align-items-center h-100">
        <div class="row ">
            <div class="col-md-6">
                <div class="form-container text-center">
                    <p class="title">Welcome back</p>
                    <form action="/login" method="post" class="form" id="registrationForm">
                        <input type="email" id="email" name="email" class="input" placeholder="Email">
                        <div class="error-message" id="errorEmail">
                            <% if (typeof message1 !=='undefined' ) { %>
                                <div class="error-message">
                                    <%= message1 %>
                                </div>
                                <% } %>
                        </div>
                        <input type="password" id="password" name="password" class="input" placeholder="Password"
                            required min="6" max="30">
                        <div class="error-message" id="errorPassword">
                            <div class="error-message">
                                <% if (typeof message !=='undefined' ) { %>
                                    <%= message %>
                            </div>
                            <% } %>
                        </div>
                        <a href="/forgot-password"><span class="page-link-label ">Forgot Password?</span></a>
                        <button  type="submit" class="w-100"> Login
                        </button>
                    </form>
                    <p class="sign-up-label">
                        Don't have an account? <a href="/register"><span class="sign-up-link ">Sign up</a></span>
                    </p>
                </div>
            </div>
        </div>
    </div>



    <script>


        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("registrationForm").addEventListener("submit", function (event) {
                // Prevent the default form submission behavior
                event.preventDefault();
                // Call the login validation function
                if (validateLoginForm()) {
                    // If validation succeeds, manually submit the form
                    this.submit();
                }
            });
        });

        function validateLoginForm() {
            // Reset previous error messages
            const errorFields = ['email', 'password'];
            errorFields.forEach(field => {
                const errorElement = document.getElementById(`error${field.charAt(0).toUpperCase() + field.slice(1)}`);
                if (errorElement) {
                    errorElement.textContent = '';
                } else {
                    console.error(`Error element with ID ${'error' + field.charAt(0).toUpperCase() + field.slice(1)} not found.`);
                }
            });

            // Validate each field
            if (!validateEmail('email')) return false;
            if (!validatePassword('password')) return false;

            return true;
        }

        function validateEmail(fieldName) {
            const inputField = document.getElementById(fieldName);
            const value = inputField.value.trim();
            const errorField = document.getElementById(`error${fieldName.charAt(0).toUpperCase() + fieldName.slice(1)}`);
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

            if (value === '') {
                errorField.textContent = 'Email is required.';
                inputField.style.border = '1px solid red';
                return false;
            } else if (!emailRegex.test(value)) {
                errorField.textContent = 'Invalid email format.';
                inputField.style.border = '1px solid red';
                return false;
            } else {
                errorField.textContent = ''; // Clear previous error messages
                inputField.style.border = '1px solid #ced4da';
            }
            return true;
        }

        function validatePassword(fieldName) {
            const inputField = document.getElementById(fieldName);
            const value = inputField.value.trim();
            const errorField = document.getElementById(`error${fieldName.charAt(0).toUpperCase() + fieldName.slice(1)}`);

            if (value === '') {
                errorField.textContent = 'Password is required.';
                inputField.style.border = '1px solid red';
                return false;
            } else {
                errorField.textContent = ''; // Clear previous error messages
                inputField.style.border = '1px solid #ced4da';
            }
            return true;
        }

    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

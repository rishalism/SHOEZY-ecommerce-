                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-danger">
                                    <th scope="col ">FirstName</th>
                                    <th scope="col">LastName</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Mobile</th>
                                    <th scope="col">Is_verified</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (customer.length> 0) {
                                    for (let i = 0; i < customer.length; i++) { %>
                                        <tr>
                                            <td id="firstname">
                                                <%= customer[i].firstName %>
                                            </td>
                                            <td>
                                                <%= customer[i].secondName %>
                                            </td>
                                            <td>
                                                <%= customer[i].email %>
                                            </td>
                                            <td>
                                                <%= customer[i].mobile %>
                                            </td>
                                            <td>
                                                <% if (customer[i].is_verified==1){%>
                                                    verified
                                                    <%} else { %>
                                                    not verified
                                                <% } %>
                                            </td>
                                            <td>
                                                <button type="button"
                                                    class="btn btn <%= customer[i].is_blocked ? 'btn-success' : 'btn-danger' %> block-button"
                                                    data-user-id="<%= customer[i]._id %>"
                                                    data-state="<%= customer[i].is_blocked ? 'UnBlocked' : 'Blocked' %>">
                                                    <%= customer[i].is_blocked ? 'UnBlock' : 'Block' %>
                                                </button>
                                            </td>
                                        </tr>
                                        <% } } else { %>
                                            <tr>
                                                <td colspan="4">Users not found</td>
                                            </tr>
                                            <% } %>
                            </tbody>

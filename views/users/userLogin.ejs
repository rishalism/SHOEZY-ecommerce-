<%- include('../layouts/header.ejs') %>
<div id="preloder">
    <div class="loader"></div>
</div>
    <div class="container-fluid box1">
        <div class="row d-flex justify-content-start align-items-start">
            <div class="col-md-6" style="margin-top: -15px;">
                <div class="block">
                    <div class="welcome-text mt-4 shoezy">Welcome back to
                        <br />shoezy!
                    </div>

                    <div class="image-container"></div>
                </div>
            </div>
            <div class="col-md-6" style="margin-top: -15px;">
                <form action="/login" method="post" id="registrationForm" onsubmit="return validateloginform()">
                    <div class="card login card-registration mt-5 pt-5">
                        <div class="card-body p-md-3 text-black">
                            <h3 class="mb-4 text-uppercase">Login </h3>

                            <div class="form-outline mb-3">
                                <input type="email" id="email" name="email" class="form-control" required />
                                <label class="form-label" for="form3Example9">Email</label>
                                <div class="error-message" id="errorEmail">
                                    <% if (typeof message1 !=='undefined' ) { %>
                                        <div class="error-message" id="errorPassword">
                                            <%= message1 %>
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                            <div class="form-outline mb-3">
                                <input type="password" id="password" name="password" class="form-control" required
                                    min="6" max="30" />
                                <label class="form-label" for="password">Password</label>
                                <div class="error-message" id="errorPassword">
                                    <% if (typeof message !=='undefined' ) { %>
                                        <div class="error-message" id="errorPassword">
                                            <%= message %>
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                            <div class=" form-outline login-box text-center pt-4">
                                <button type="submit" class="btn signup btn-lg btn-block">Login</button>
                            </div>
                            <div class=" text-center pt-4">
                                <p>don't have an account? <a href="/">signUp</a></p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
   
   

   

<%- include('../layouts/header.ejs') %>
  <div class="container-fluid">
    <div class="row d-flex justify-content-start align-items-start">
      <div class="col-md-6" style="margin-top: -15px;">
        <div class="block">
          <div class="welcome-text mt-4 ">Welcome to <br />shoezy</div>
          <div class="image-container"></div>
        </div>
      </div>
      <div class="col-md-6" style="margin-top: -15px;">
        <form action="/register" method="post" id="registrationForm" onsubmit="return validateForm()">
          <div class="card card-registration mt-4" id="card">
            <div class="card-body p-md-3 text-black">
              <h3 class="mb-4 text-uppercase">create an account </h3>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <div class="form-outline">
                    <input type="text" id="firstname" name="firstname" class="form-control" required minlength="2"
                      maxlength="20" />
                    <label class="form-label" for="firstname">First name</label>
                    <div class="error-message" id="errorFirstname"></div>
                    <span></span>
                  </div>
                </div>
                <div class="col-md-6 mb-3">
                  <div class="form-outline">
                    <input type="text" id="lastname" name="lastname" class="form-control" required />
                    <label class="form-label" for="lastname">Last name</label>
                    <div class="error-message" id="errorLastname"></div>
                  </div>
                </div>
              </div>
              <div class="form-outline mb-3">
                <input type="email" id="email" name="email" class="form-control" required />
                <label class="form-label" for="form3Example9">Email</label>
                <div class="error-message" id="errorEmail"></div>
              </div>
              <div class="form-outline mb-3">
                <input type="number" id="mobile" name="mobile" class="form-control" required />
                <label class="form-label" for="mobile">Mobile</label>
                <div class="error-message" id="errorMobile"></div>
              </div>

              <div class="form-outline mb-3">
                <input type="password" id="password" name="password" class="form-control" required min="6" max="30" />
                <label class="form-label" for="password">Password</label>
                <div class="error-message" id="errorPassword"></div>
              </div>

              <div class="form-outline ">
                <input type="password" id="password1" name="password1" class="form-control" required min="6" max="30" />
                <label class="form-label" for="password1">Confirm Password</label>
                <div class="error-message" id="errorPassword1"></div>
              </div>
              <div class=" form-outline login-box text-center">
                <button type="submit" class="btn btn-lg btn-block">signup</button>
              </div>
              <div class=" text-center">
                <p>Already have an account? <a href="/login">Login</a></p>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script src="/scripts/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

  <%- include('../layouts/footer.ejs') %>
    <script>
        function cancelProduct(orderId) {
            // Add logic to handle cancellation, for example, make an AJAX request to cancel the product
            console.log('Cancel product with orderId:', orderId);


            Swal.fire({
                title: "Are you sure?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, cancel !"
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/cancel-order', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            orderId
                        })
                    }).then(response => {
                        return response.json()
                    }).then(data => {
                        if (data) {
                            Swal.fire({
                                position: "center",
                                icon: "success",
                                title: "product  has been canceled !",
                                showConfirmButton: false,
                            }); setTimeout(() => {
                                location.reload()
                            }, 1000);
                        }
                    }).catch(error => {
                        console.log(error);
                    })
                }
            });
        }



        (function () {
            let currentStatus = document.getElementById('currentStatus').value
            let item = document.querySelectorAll('.step-wizard-item').forEach(item => {
                let status = item.getAttribute('data-status');

                if (currentStatus == status) {
                    item.classList.add('current-item')
                }
            })
        })();




        document.querySelectorAll('.return-btn').forEach(button => {
            button.addEventListener('click', async () => {
                const orderid = button.getAttribute('data-orderID')
                const productID = button.getAttribute('data-productId')
                const prize = button.getAttribute('data-productPrize');

                const { value: reason } = await Swal.fire({
                    text: "Returning ? We'd love to hear why!",
                    input: "select",
                    inputOptions: {
                        Quality: "Quality issue",
                        Size: "Wrong size",
                        Change: "Changed my mind",
                        Defective: "Defective item",
                        Unhappy: "Not satisfied",
                        Duplicate: "Received duplicate",
                        Other: "Other reasons"
                    },
                    inputPlaceholder: "Select a reason",
                    showCancelButton: true,
                });

                if (reason) {
                    fetch('/return-order', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            orderid, productID, reason, prize
                        })
                    }).then(reponse => {
                        return reponse.json()
                    }).then(data => {
                        if (data) {
                            Swal.fire({
                                text: "Thanks! Your return is in progress. Expected back within one week.",
                                icon: "success",
                                showConfirmButton: false,
                                timer: 2000
                            });
                            setTimeout(() => {
                                location.reload()
                            }, 2000);
                        }
                    }).catch(error => {
                        console.log(error);
                    })
                }

            })
        })



        let downloadButton = document.getElementById('downloadInvoice');

        downloadButton.addEventListener('click',async() => {



            const inputOptions = new Promise((resolve) => {
                setTimeout(() => {
                    resolve({
                        // "#ff0000": "Red",
                        // "#00ff00": "Green",
                        // "#0000ff": "Blue"
                    });
                }, 3000);
            });
            const { value: color } = await Swal.fire({
                title: "Processing...",
                input: "radio",
                inputOptions,
                timer : 3000,
                confirmButtonColor : 'white',
                confirmButtonText : ' '
            });



            let orderid = document.getElementById('orderDetails').value;
            let orders = document.getElementById('orders').value;
            let userAddres = []
            let shippingAddress = []
            let orderdate = null
            fetch('/getInvoiceData', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    orderid
                })
            }).then(response => {
                return response.json()
            }).then(data => {
                if (data) {
                    userAddres = data.userAddres
                    shippingAddress = data.shippingAddress
                    orderdate = data.orderdate
                    const invoiceNum = 'INV-' + orderid.slice(5, 13)
                    createInvoice(userAddres, shippingAddress, orderdate, invoiceNum)
                }
            }).catch(error => {
                console.log(error);
            })

            const productsArr = JSON.parse(orders)






            async function createInvoice(userAddres, shippingAddress, orderdate, invoiceNum) {
                const dueDate = new Date(orderdate);
                dueDate.setDate(dueDate.getDate() + 10)
                var data = {
                    "customize": {},
                    "images": {
                        "logo": "https://public.budgetinvoice.com/img/logo_en_original.png",
                    },
                    "sender": {
                        "company": "shoezy",
                        "address": "Malappuram",
                        "zip": "545306",
                        "city": "vengara",
                        "country": "India"
                    },
                    "client": {
                        "company": userAddres.firstName,
                        "address": shippingAddress.houseName,
                        "zip": shippingAddress.zipcode,
                        "state": shippingAddress.state,
                        "city": shippingAddress.town,
                        "country": shippingAddress.country
                    },
                    "information": {
                        "number": invoiceNum,
                        "date": orderdate,
                        "due-date": dueDate.toLocaleDateString()
                    },
                    "products": productsArr.items.map((product) => ({
                        "quantity": product.quantity,
                        "description": product.productID.description,
                        "tax-rate": 0,
                        "price": product.productPrize
                    })),
                    "settings": {
                        "currency": "INR",
                    },
                    "translate": {},
                };

                easyinvoice.createInvoice(data, function (result) {
                    easyinvoice.download('myInvoice.pdf', result.pdf);

                });

                var elementId = 'pdf';
                easyinvoice.createInvoice(data, function (result) {
                    easyinvoice.render(elementId, result.pdf, function () {
                        console.log('Invoice rendered!');
                    });
                });

            }

        })

    </script>

        <!-- Add categories form -->
        <div class="container-fluid pt-4 px-4">
            <div class="bg-secondary text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Add categories</h6>
                </div>
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-white">
                            <th scope="col">
                                <input type="text" name="categoryName" id="categoryName" placeholder="category name"
                                    required maxlength="12" minlength="3">
                                <button type="button" class="btn btn-success" onclick="addCategory()">Add</button>
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>


        <!-- add category Start -->
        <div class="container-fluid pt-4 px-4">
            <div class="bg-secondary text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                </div>
                <div class="table-responsive">
                    <form id="addCategoryForm">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-white">
                                    <th scope="col">category name</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (category) { %>
                                    <% for(let i=0; i < category.length ; i++){ %>
                                        <tr>
                                            <td>
                                                <a>
                                                    <%=category[i].categoriesName %>
                                                </a>
                                            </td>
                                            <td>
                                                <button type="button" data-product-id="<%=category[i].id%>"
                                                    class="list-unlist btn <%=category[i].is_listed? 'btn-danger' : 'btn-success'%>"
                                                    data-action="<%= category[i].is_listed ? 'unlisted' : 'Listed'%>">
                                                    <%= category[i].is_listed ? "unlisted" : "Listed" %>
                                                </button>


                                                <a href="/admin/edit-category?id=<%=category[i].id%>">
                                                    <button data-id="<%=category[i].id%>" data-event="edit"
                                                        class="edit-delete btn btn-warning"
                                                        type="button">edit</button></a>
                                            </td>
                                        </tr>
                                        <% } %>
                                            <% } %>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
